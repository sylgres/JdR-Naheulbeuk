/* Définition des A[1]igines possible */
 void origine(boolean[] O, int [] C) {
   /*Barbare*/
    O[0] = (C[0] > 11) && (C[1] < 11) && (C[4] > 12);
   /*Demi-Elfe*/
    O[1] = (C[2] > 9) && (C[3] > 10);
   /*Demi-A[1]que*/
    O[2] = (C[1] < 11) && (C[3] < 12) && (C[4] > 11);
   /*Elfe Noir*/
    O[3] = (C[1] > 11) && (C[3] > 12) && (C[4] < 13);
   /*Elfe Sylvain*/
    O[4] = (C[2] > 11) && (C[3] > 9) && (C[4] < 12);
   /*Gnôme*/
    O[5] = (C[1] > 9) && (C[3] > 12) && (C[4] < 9);
   /*Gobelin*/
    O[6] = (C[0] < 11) && (C[1] < 11) && (C[2] < 9) && (C[4] < 10);
   /*Haut Elfe*/
    O[7] = (C[1] > 10) && (C[2] > 11) && (C[3] > 11) && (C[4] < 13);
   /*Hobbit*/
    O[8] = (C[0] > 11) && (C[1] > 9) && (C[4] < 11);
   /*Humain*/
    O[9] = true;
   /*Ogre*/
    O[10] = (C[0] > 10) && (C[4] > 11);
   /*A[1]que*/
    O[11] = (C[1] < 10) && (C[2] < 11) && (C[3] < 12) && (C[4] > 12);
   /*Nain*/
    O[12] = (C[1] < 9) && (C[2] < 11) && (C[4] > 11);
}

/* Definition des métier */
 void metier(boolean [] M, int [] C) {
   /*Bourgeois ou Noble*/
    M[0] = (C[1] >9) && (C[2] >10);
   /*Guerrier ou gladiateur*/
    M[1] = (C[0] >11) && (C[4] >11);
   /*Ingénieur*/
    M[2] = (C[3] >10);
   /*Mage*/
    M[3] = (C[1] >11);
   /*Marchand ou Négociant*/
    M[4] = (C[1] >11) && (C[2] >10);
   /*Menestrel*/
    M[5] = (C[2] >11) && (C[3] >10);
   /*Ninja ou Assassin*/
    M[6] = (C[3] >12);
   /*Paladin*/
    M[7] = (C[0] >11) && (C[1] >9) && (C[2] >10) && (C[4] >8);
   /*Pirate*/
    M[8] = (C[0] >10);
   /*Prêtre*/
    M[9] = (C[2] >9);
   /*Ranger*/
    M[10] = (C[2] >9) && (C[3] >9);
   /*Tzinntch*/
    M[11] = true;
   /*Voleur*/
    M[12] = (C[3] >11);
}

String ChoixO(boolean d, int nbMet, boolean [] O, String [] ori, boolean [] M, int []E, int [] AP) {
   /* -------------------------- Choix de l'origine -------------------------- */
    int l =0, c =0;
   for (int i =0; i < nbMet; i ++) if (O[i]) {
      l ++;
      c = i;
   }
   if (l >1) {
      do{
         c = readInteger("Entrez le nombre en face de l'origine que vous voulez choisir") -1;
      }
      while ((c <0 || c > nbMet) || (O[c] == false));
      for (int a =0; a < nbMet; a ++) O[a] = false;
      O[c] = true;
   }
   /*Barbare*/
    if (O[0]) {
      E[0] =35;
      AP[0] ++;
      AP[1] --;
   }
   else/*Demi-Elfe*/
    if (O[1]) E[0] =28;
   else /*Demi-A[1]que*/
    if (O[2]) E[0] =35;
   else /*Elfe Noire*/
    if (O[3]) E[0] =25;
   else/*Elfe Sylvain*/
    if (O[4]) E[0] =25;
   else /*Gnôme*/
    if (O[5]) {
      E[0] =15;
      AP[0] +=2;
      AP[1] -=2;
   }
   else /*Gobelin*/
    if (O[6]) E[0] =20;
   else/*Haut Elfe*/
    if (O[7]) E[0] = 25;
   else /*Hobbit*/
    if (O[8]) E[0] =25;
   else /*Humain*/
    if (O[9]) E[0] =30;
   else /*Ogre*/
    if (O[10]) {
      E[0] =45;
      AP[0] ++;
      AP[1] --;
   }
   else /*A[1]que*/
    if (O[11]) {
      E[0] =35;
      AP[0] ++;
      AP[1] --;
   }
   else /*Nain*/
    if (O[12]) E[0] =35;
   /*Modif  métier en fonction de l'origine*/
    if (O[0] || O[12] || O[2]) {
      M[3] = false;
      M[9] = false;
   }
   if (O[4]) {
      M[1] = false;
      M[3] = false;
   }
   if (O[11] || O[10]) {
      M[1] = false;
      M[3] = false;
      M[7] = false;
      M[9] = false;
   }
   if (O[6]) {
      M[1] = false;
      M[3] = false;
      M[7] = false;
      M[9] = false;
   }
   if (O[8]) {
      M[3] = false;
      M[1] = false;
   }
   if (O[5]) {
      M[1] = false;
      M[3] = false;
      M[7] = false;
      M[9] = false;
   }
   return  ori[c];
}

String ChoixM(boolean d, int nbMet, boolean [] M, String [] met, boolean [] O, int []E, int [] AP, int [] A) {
   /* -------------------------- Choix du métier -------------------------- */
    int k =0, c =0;
   for (int i = 0; i < nbMet; i ++) if (M[i]) {
      k ++;
      c = i;
   }
   if (k >1) {
      do{
         c = readInteger("Entrez le nombre en face du métier que vous voulez choisir") -1;
      }
      while ((c <0 || c > nbMet) || (M[c] == false));
      for (int a =0; a < nbMet; a ++) M[a] = false;
      M[c] = true;
   }
   /*Bouregois ou Noble*/
    if (M[0]) {
      AP[0] =7;
      AP[1] =9;
      A[1] += (de(6, d) + de(6, d)) *10;
   }
   else /*Mage*/
    if (M[3]) {
      if (O[9]) E[0] =20;
      else E[0] *= (1 -1 /3);
      E[1] =30;
   }
   else /*Ninja ou Assassin*/
    if (M[6]) {
      AP[0] =11;
      AP[1] =8;
   }
   else /*Paladin*/
    if (M[7]) {
      E[0] +=2;
      E[1] =10;
   }
   else /*Prêtre*/
    if (M[9]) E[1] =20;
   else /*Tzinntch*/
    if (M[11]) {
      E[0] +=2;
      E[1] =10;
   }
   return  met[c];
}

