/* C : COU, INT, CHA, AD, FO; A : A[0], or; Magie : Magie[0], Magie[1], Magie[2] */
 void carac(int [] C, int [] A, int [] Magie, boolean d) {
   C[0] = de(6, d) +7;
   C[1] = de(6, d) +7;
   C[2] = de(6, d) +7;
   C[3] = de(6, d) +7;
   C[4] = de(6, d) +7;
   A[0] = de(4, d) -1;
   A[1] = (de(6, d) + de(6, d)) *10;
   Magie[0] = (C[1] + C[3]) /2;
   Magie[1] = (C[1] + C[2]) /2;
   Magie[2] = (C[1] + C[0] + C[4]) /3;
}

